<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Glass overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0D000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top shape -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/top_left"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Bottom shape -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bottom_right"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="LOGIN TO\nYOUR ACCOUNT"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/brand_text"
                android:gravity="center"
                android:fontFamily="@font/space_grotesk_semibold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:text="Enter your login information"
                android:textColor="#99FFFFFF"/>

            <!-- Glass card -->
            <LinearLayout
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_glass_card">

                <!-- Email -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_glass"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/brand_text"
                    android:textColorHint="#80FFFFFF"/>

                <!-- Password -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_input_glass"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/brand_text"
                    android:textColorHint="#80FFFFFF"/>

                <!-- Remember / forgot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_remember"
                        android:text="Remember me"
                        android:textColor="#BFFFFFFF"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_forgot_password"
                        android:text="Forgot password"
                        android:textColor="@color/orange"/>
                </LinearLayout>

                <!-- Login button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_orange"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_register_toggle"
                android:layout_marginTop="24dp"
                android:text="Don't have an account? Sign Up"
                android:textColor="@color/orange"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>