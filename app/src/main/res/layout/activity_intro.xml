<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- Top Left Image (Thoda sa bara size: 250dp) -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/top_left"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Right Image (Thoda sa bara size: 250dp) -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bottom_right"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center Text: Sirf BASITSHOP -->
    <TextView
        android:id="@+id/txt_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASITSHOP"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glass Round Button -->
        <FrameLayout
            android:id="@+id/btn_glass_action"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_glass_round"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:rotation="-45"
                app:tint="#FF9800" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.05"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>