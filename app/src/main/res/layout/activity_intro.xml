<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Top Left Shape -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/top_left"
        android:scaleType="fitXY"
        android:translationX="-24dp"
        android:translationY="-24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Bottom Right Shape -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/bottom_right"
        android:scaleType="fitXY"
        android:translationX="24dp"
        android:translationY="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Brand -->
    <TextView
        android:id="@+id/txt_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASITSHOP"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.18"
        android:textColor="@color/brand_text"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- Button -->
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/btn_action_container"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/bg_liquid_glass"
            android:elevation="16dp">

            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_triangle_down"
                android:tint="@color/orange"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.08"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>