<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Left Corner Design (Exact Corner) -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_corner_shape"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Bottom Right Corner Design (Exact Corner) -->
    <!-- Isay rotation 180 di hai taaki ye opposite side par fit ho -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_corner_shape"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Center Content (Logo & Text) -->
    <LinearLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/app_icon"
            android:elevation="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome Home"
            android:textColor="#2D2D2D"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Experience the future of design\nwith smooth animations."
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <!-- Bottom Button Container (Navigation bar se thora upar) -->
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glass Button with Arrow -->
        <FrameLayout
            android:id="@+id/btn_glass_action"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_glass_round"
            android:elevation="6dp">

            <!-- Arrow Icon -->
            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:rotation="-45"
                app:tint="#FF9800" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.05"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
