<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/top_left"
        android:scaleType="centerCrop" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bottom_right"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASITSHOP"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="44sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:elevation="10dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/btn_glass_action"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_glass_round"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:rotation="-45"
                app:tint="#FF9800" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
