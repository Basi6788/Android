<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Glass overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#08000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top shape -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/top_left"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Bottom shape -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bottom_right"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Brand -->
    <TextView
        android:id="@+id/txt_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASITSHOP."
        android:textSize="40sp"
        android:textColor="@color/brand_text"
        android:letterSpacing="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Swipe container -->
    <FrameLayout
        android:id="@+id/swipe_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_glass_pill"
        android:elevation="12dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe to Get Started"
            android:textColor="@color/brand_text"
            android:layout_gravity="center"/>

        <FrameLayout
            android:id="@+id/swipe_thumb"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_glass_circle"
            android:layout_gravity="start|center_vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/orange"/>
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>