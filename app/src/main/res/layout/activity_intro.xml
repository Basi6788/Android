<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">
    <!-- ?android:attr/windowBackground ka matlab hai system theme follow karega -->

    <!-- Top Left Corner Image (PNG) -->
    <ImageView
        android:id="@+id/shape_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_left"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Right Corner Image (PNG) -->
    <ImageView
        android:id="@+id/shape_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_right"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center Content -->
    <LinearLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/app_icon"
            android:elevation="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Text Color ko Theme Aware bana diya hai -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome Home"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Experience the future of design\nwith smooth animations."
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/btn_glass_action"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_glass_round"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:rotation="-45"
                app:tint="#FF9800" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.05"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>